<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_marginBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userFromImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_star_big_on"

        app:layout_constraintEnd_toStartOf="@+id/messageFromUserTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messageFromUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/testMessage"
        android:textSize="14sp"
        android:textColor="@android:color/white"

        android:background="@drawable/message"
        android:backgroundTint="@color/colorPrimaryDark"
        android:maxWidth="240dp"
        android:padding="8dp"

        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/userFromImageView"
        app:layout_constraintTop_toTopOf="@+id/userFromImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>